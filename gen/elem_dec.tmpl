{{/* Gross switch */}}{{define "ElemTempl"}}{{if eq (.Type) 1 }}{{/*Ptr*/}}{{template "PtrTempl" .Ptr}}{{else if eq (.Type) 2 }}{{/*Slice*/}}{{template "SliceTempl" .Slice}}{{else if eq (.Type) 3 }}{{/*Struct*/}}{{template "StructTempl" .Struct}}{{else if eq (.Type) 4 }}{{/*Base*/}}{{template "BaseTempl" .Base}}{{end}}{{end}}

{{define "PtrTempl"}}
	if dc.IsNil() {
		nn, err = dc.ReadNil()
		n += int64(nn)
		if err != nil {
			return
		}
		{{.Varname}} = nil
	} else {
		if {{.Varname}} == nil {
			{{.Varname}} = new({{.TypeName}})
		}
		{{template "ElemTempl" .Value}}	
	}
{{end}}

{{define "MapTempl"}}
	sz, nn, err = dc.ReadMapHeader()
	n += int64(nn)
	if err != nil {
		return
	}
	if {{.Varname}} == nil && sz > 0 {
		{{.Varname}} = make({{.TypeName}}, int(sz))
	}
	for inx := uint32(0); inx < sz; inx++ {
		var key string 
		var val {{.Value.TypeName}}
		key, nn, err = dc.ReadString()
		n += int64(nn)
		if err != nil {
			return
		}
		{{template "ElemTempl" .Value}}
		{{.Varname}}[key] = val
	}
{{end}}

{{define "SliceTempl"}}
	sz, nn, err = dc.ReadArrayHeader()
	n += int64(nn)
	if err != nil {
		return
	}
	if cap({{.Varname}}) > 0 && cap({{.Varname}}) >= int(sz){
		{{.Varname}} = {{.Varname}}[0:int(sz)]
	} else {
		{{.Varname}} = make([]{{.TypeName}}, sz)
	}
	for i := range {{.Varname}} {
		{{template "ElemTempl" .Els}}
	}
{{end}}

{{define "StructTempl"}}
	sz, nn, err = dc.ReadMapHeader()
	n += int64(nn)
	if err != nil {
		return
	}
	for xplz:=uint32(0); xplz<sz; xplz++ {
		field, nn, err = dc.ReadStringAsBytes(field)
		n += int64(nn)
		if err != nil {
			return
		}
		switch enc.UnsafeString(field) {
		{{range .Fields}}
		case "{{ .FieldTag}}":{{template "ElemTempl" .FieldElem}}
		{{end}}
		default:
			nn, err = dc.Skip()
			n += int64(nn)
			if err != nil {
				return
			}
		}
	}	
{{end}}

{{define "BaseTempl"}}{{/* TODO: make this less gross */}}
	{{if .Convert}}var tmp {{.BaseType}}{{end}}{{/* type lowering shim */}}
	{{if eq (.Value) 1}}{{/* is []byte */}}
	{{if .Convert}}tmp, nn, err = dc.ReadBytes([]byte({{.Varname}})){{else}}{{.Varname}}, nn, err = dc.ReadBytes({{.Varname}}){{end}}
	{{else if .IsIdent}}{{/* is ReaderFrom */}}
	nn, err = dc.ReadIdent({{.Varname}})
	{{else}}{{/* any other type */}}
	{{if .Convert}}tmp, nn, err = dc.Read{{.BaseName}}(){{else}}{{.Varname}}, nn, err = dc.Read{{.BaseName}}(){{end}}
	{{end}}
	{{if .Convert}}{{.Varname}} = {{.Ident}}(tmp){{end}}
	n += int64(nn)
	if err != nil {
		return
	}
{{end}}
