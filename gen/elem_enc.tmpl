{{define "ElemTempl"}}{{if eq (.Type) 1 }}{{/*Ptr*/}}{{template "PtrTempl" .Ptr}}{{else if eq (.Type) 2 }}{{/*Slice*/}}{{template "SliceTempl" .Slice}}{{else if eq (.Type) 3 }}{{/*Struct*/}}{{template "StructTempl" .Struct}}{{else if eq (.Type) 4 }}{{/*Base*/}}{{template "BaseTempl" .Base}}{{else if eq (.Type) 5 }}{{/* Map */}}{{template "MapTempl" .Map}}{{else if eq (.Type) 6 }}{{/* Array */}}{{template "ArrayTempl" .Array}}{{end}}{{end}}

{{define "PtrTempl"}}
	if {{.Varname}} == nil {
		nn, err = en.WriteNil()
		n += nn
		if err != nil {
			return
		}
	} else {
		{{template "ElemTempl" .Value}}
	}
{{end}}

{{define "BaseTempl"}}
	{{if .Convert}}
	nn, err = en.Write{{.BaseName}}({{.BaseType}}({{.Varname}}))
	{{else if .IsIdent}}
	nn, err = {{.Varname}}.EncodeTo(en)
	{{else}}
	nn, err = en.Write{{.BaseName}}({{.Varname}})
	{{end}}
	n += nn
	if err != nil {
		return
	}
{{end}}

{{define "MapTempl"}}
	nn, err = en.WriteMapHeader(uint32(len({{.Varname}})))
	n += nn
	if err != nil {
		return
	}

	for {{.Keyidx}}, {{.Validx}} := range {{.Varname}} {
		nn, err = en.WriteString({{.Keyidx}})
		n += nn
		if err != nil {
			return
		}
		{{template "ElemTempl" .Value}}
	}
{{end}}

{{define "SliceTempl"}}
	nn, err = en.WriteArrayHeader(uint32(len({{.Varname}})))
	n += nn
	if err != nil {
		return
	}
	for {{.Index}} := range {{.Varname}} {
		{{template "ElemTempl" .Els}}
	}
{{end}}

{{define "ArrayTempl"}}
	nn, err = en.WriteArrayHeader({{.Size}})
	n += nn
	if err != nil {
		return
	}
	for {{.Index}} := range {{.Varname}} {
		{{template "ElemTempl" .Els}}
	}
{{end}}

{{define "StructTempl"}}
	nn, err = en.WriteMapHeader({{len .Fields}})
	n += nn
	if err != nil {
		return
	}
	{{range .Fields}}
	nn, err = en.WriteString("{{.FieldTag}}")
	n += nn
	if err != nil {
		return
	}
	{{template "ElemTempl" .FieldElem}}{{end}}
{{end}}